<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/photo1"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:orientation="vertical">
                <View
                    android:layout_width="45dp"
                    android:layout_height="5dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="22dp"
                    android:background="#000000"/>
                <View
                    android:layout_width="45dp"
                    android:layout_height="5dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="8dp"
                    android:background="#000000"/>
                <View
                    android:layout_width="45dp"
                    android:layout_height="5dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="8dp"
                    android:background="#000000"/>

            </LinearLayout>
            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Google Play"
                android:textColor="#000000"
                android:textSize="25sp"
                android:layout_marginTop="22dp"
                android:layout_marginStart="20dp" />

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="16dp"
                android:padding="5dp"
                android:layout_marginLeft="90dp"
                android:background="@drawable/photo1"
                android:src="@drawable/mic" />


        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="10dp"
            android:background="@drawable/photo3">
            <Button
                android:id="@+id/btn_place1"
                android:layout_margin="10dp"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:text="APPS"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:background="#0B8510" />
            <Button
                android:id="@+id/btn_place2"
                android:layout_margin="10dp"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_below="@+id/btn_place1"
                android:text="MOVIES &amp; TV"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:background="#F65A56" />
            <Button
                android:id="@+id/btn_place3"
                android:layout_margin="10dp"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_below="@+id/btn_place2"
                android:text="BOOKS"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:background="#51A5EF" />
            <Button
                android:id="@+id/btn_place4"
                android:layout_margin="10dp"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_toEndOf="@+id/btn_place1"
                android:text="GAMES"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:background="#C8F32C" />
            <Button
                android:id="@+id/btn_place5"
                android:layout_margin="10dp"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_below="@+id/btn_place4"
                android:layout_toEndOf="@+id/btn_place2"
                android:text="MUSIC"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:background="#F8B821" />
            <Button
                android:id="@+id/btn_place6"
                android:layout_margin="10dp"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_below="@+id/btn_place5"
                android:layout_toEndOf="@+id/btn_place3"
                android:text="NEWSTAND"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:background="#5E72ED" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="News + Update Games"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:textSize="20sp"
                android:textColor="#000000"/>
            <Button
                android:id="@+id/btn_place7"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="MORE"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:background="#07BA0E" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="6"
                android:background="@drawable/photo1"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="38dp"
                    android:background="@drawable/photo4"
                    android:src="@drawable/ic_baseline_image_24" />
                <TextView
                    android:layout_width="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="25dp"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="Monster Legends"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="6"
                android:background="@drawable/photo1"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="38dp"
                    android:background="@drawable/photo4"
                    android:src="@drawable/ic_baseline_image_24" />
                <TextView
                    android:layout_width="75dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="25dp"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="Mighty Smightless"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="6"
                android:background="@drawable/photo1"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="38dp"
                    android:background="@drawable/photo4"
                    android:src="@drawable/ic_baseline_image_24" />
                <TextView
                    android:layout_width="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="Marvel Contest of"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Popular Apps + Games"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:textSize="20sp"
                android:textColor="#000000"/>
            <Button
                android:id="@+id/btn_place8"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="More"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:background="#07BA0E" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="6"
                android:background="@drawable/photo1"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="38dp"
                    android:background="@drawable/photo4"
                    android:src="@drawable/ic_baseline_image_24" />
                <TextView
                    android:layout_width="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="25dp"
                    android:textSize="18sp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="6"
                android:background="@drawable/photo1"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="38dp"
                    android:background="@drawable/photo4"
                    android:src="@drawable/ic_baseline_image_24" />
                <TextView
                    android:layout_width="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="25dp"
                    android:textSize="18sp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>




</LinearLayout>